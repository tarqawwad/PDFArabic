@model List<PDFArabic.Models.StudentModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "شاشة الطلاب";
}
@*By Tareq Awwad*@
<div dir="rtl">
    <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
            <thead>
                <tr>
                    <th>رقم الطالب</th>
                    <th>الطالب</th>
                    <th>العمر</th>
                    <th>التخصص</th>
                    <th>المعدل</th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StudentNumber</td>
                        <td>@item.StudentName</td>
                        <td>@item.StudentAge</td>
                        <td>@item.StudentDepartment</td>
                        <td>@item.StudentAVG</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row justify-content-center mt-3">
    <div class="col-6">
        <a href='/Home/DownloadPDF' class="form-control text-white text-center" style="background-color:#435560;text-decoration:none">
            تنزيل بي دي أف
        </a>
    </div>
</div>

@*By Tareq Awwad*@